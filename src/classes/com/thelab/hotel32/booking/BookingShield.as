package com.thelab.hotel32.booking{	import com.greensock.TweenMax;		import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;		import org.osflash.signals.Signal;	import org.osflash.signals.natives.NativeSignal;		public class BookingShield extends Sprite	{		private var _active								: Boolean = false;				public var clicked								: NativeSignal;		public var clickedSender						: Signal;				public function BookingShield()		{			clicked = new NativeSignal(this, MouseEvent.CLICK, MouseEvent);			clickedSender = new Signal();			if (stage) init(); else { addEventListener(Event.ADDED_TO_STAGE, init); }		}				private function init(e:Event=null):void		{			removeEventListener( Event.ADDED_TO_STAGE, init);						clicked.add(onClicked);						graphics.beginFill(0x460007, .95);//			graphics.beginFill(0x000000, .95);			graphics.drawRect(0, 0, 2704, 486);			x = -760;			y = 98;			alpha = 0;			visible = false;								}				private function onClicked(e:MouseEvent):void		{			clickedSender.dispatch();		}				public function set active(val:Boolean):void		{			_active = val;			if (_active)			{								TweenMax.to(this, .25, { autoAlpha: .8 });			}			else			{								TweenMax.to(this, .25, { autoAlpha: 0 });			}		}	}}