package com.thelab.hotel32{	import com.thelab.hotel32.assets.AssetController;	import com.thelab.hotel32.assets.AssetLoader;	import com.thelab.hotel32.helpers.DebugConsole;	import com.thelab.hotel32.helpers.Logger;	import com.thelab.hotel32.nav.NavigationController;	import com.thelab.hotel32.views.amenities.AmenitiesView;	import com.thelab.hotel32.views.AppStage;	import com.thelab.hotel32.views.CasinoView;	import com.thelab.hotel32.views.ViewController;	import com.thelab.hotel32.views.video.VideoView;		import flash.display.LoaderInfo;	import flash.display.MovieClip;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.system.Security;	import flash.utils.Dictionary;		import org.osflash.signals.Signal;
		public class Main extends MovieClip	{					public var myStage								: AppStage;				// ---------------------------------------------: FlashVars Definitions		private var paramObj							: Object;		private var fvDict								: Dictionary;		public var fvMainConfig							: String;		public var fvPageConfig							: String;				public static const FV_MAIN_CONFIG				: String = "mainconfig"												public function Main()		{							stage.align = StageAlign.TOP;			stage.scaleMode = StageScaleMode.NO_SCALE;						Security.allowDomain("*");							Logger.setMode(Logger.LOG_BOTH);						var paramObj:Object = LoaderInfo(this.root.loaderInfo).parameters;						AssetController.getInstance().configLoaded.addOnce(function() { setupNavigationController(); } );			AssetController.getInstance().loadFlashvars(paramObj);					}				private function setupNavigationController():void		{			// initialize the navigation controller - when it's ready build the app stage			NavigationController.getInstance().ready.addOnce( function()			{				myStage = AppStage.getInstance();				addChild(myStage);				setupViewController();			});			NavigationController.getInstance().setup();		}				private function setupViewController():void		{			// initialize the view controller - when it's ready show the default view			ViewController.getInstance().ready.addOnce(function()			{				NavigationController.getInstance().createTopNav();				NavigationController.getInstance().navigateToView(ViewController.getInstance().videoView);//				NavigationController.getInstance().navigateToView(ViewController.getInstance().roomsView);			});			ViewController.getInstance().setup();		}	}}